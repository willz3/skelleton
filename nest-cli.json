{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "assets": [
      {
        "include": "**/*.json",
        "watchAssets": true
      }
    ],
    "options": {
      "swcrcPath": ".swcrc"
    }
  }
}